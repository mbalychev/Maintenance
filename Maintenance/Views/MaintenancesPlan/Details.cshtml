@model MaintenancePlanModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>MaintenancePlan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceType.SoftWare)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceType.SoftWare)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceType.HardWare)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceType.HardWare)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class="col-sm-2">
            Инженеры
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (EngineerModel engineer in Model.Engineers)
                {
                    <li>
                        @engineer.FullName
                    </li>
                }

            </ul>
            
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
