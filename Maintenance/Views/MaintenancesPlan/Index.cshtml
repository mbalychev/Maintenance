@model IEnumerable<MaintenancePlanModel>

<div class="row">
    <div class="col-md-1">
        <img src="~/Icons/icons8-обслуживание-50.png" style="height: 60px;"/>
    </div>
    <div class="col-md-11">
        <div class="row">
            <div class="col-md-11">
                <h4>
                    Ремонты/тех.обслуживания
                </h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-11">
                <a asp-action="Index" asp-controller="HardWares">Список оборудовани</a>
                |
                <a asp-action="Edit" >Добавить</a>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead style="background-color: #b0fff8;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceType.Name)
                </td>
                <td>
                    <a type="submit" asp-action="Details" asp-route-id="@item.Id">Подробнее</a>
                </td>
            </tr>
        }
        <tr>
            <th>

            </th>
            <th>

            </th>
            <th>
                <a asp-action="Create"></a>
            </th>
        </tr>
    </tbody>
</table>
