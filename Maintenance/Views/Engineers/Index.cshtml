@model IEnumerable<EngineerModel>

    <h3 style="margin: 20pt;">
        Инженеры
    </h3>
    <p class="text-muted">
        Работники сервисного центра, осуществляющие ремонт и проведение планового ТО техники в организации
    </p>

    <p>
    </p>
    <table class="table">
        <thead style="background-color: #b0fff8;">
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">
                        @Html.DisplayNameFor(model => model.FullName)
                    </a>
                </th>
                <th style="text-align: center">
                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.MainSort">
                        @Html.DisplayNameFor(model => model.CountMaintenance)
                    </a>
                </th>
                <th style="text-align: center"></th>
            </tr>
        </thead>
        <tbody style="background-color: rgb(176 255 248 / 0.25);">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <img src="~/Icons/icons8-man-window-50.png" />
                            @Html.DisplayFor(modelItem => item.FullName)
                        </a>

                    </td>
                    <td style="text-align: center">
                        <img src="~/Icons/icons8-обслуживание-50.png" style="height: 30px;"/>
                        @Html.DisplayFor(model => item.CountMaintenance)
                    </td>
                    <td style="text-align: center">
                        <a asp-action="Edit" asp-route-id="@item.Id">
                            <img src="~/Icons/icons8-редактировать-50.png" style="height: 30px;"/>
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">
                            <img src="~/Icons/icons8-удалить-50.png" style="height: 30px;"/> 
                        </a>
                    </td>
                </tr>
            }
        <tr style="background-color: #b0fff8;">
            <th></th>
            <th></th>
            <th style="text-align: center">
                <a asp-action="Create" class="btn" style="background-color: #127d87; color: white;">
                    Добавить
                </a>
            </th>
        </tr>
        </tbody>
    </table>
