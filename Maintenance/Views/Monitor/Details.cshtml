@model MonitorModel

<div class="row">
    <div class="col-md-1">
        <img src="~/Icons/icons8-монитор-50.png"  style="height: 60px;" />
    </div>
    <div class="col-md-11">
        <div class="row">
            <div class="col-md-2">
                <h4>
                    Монитор
                </h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <a asp-action="Index" asp-controller="HardWares">Список</a>
                |
                <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>
            </div>
        </div>
    </div>
</div>

<div>
    <hr style="background-color: #127d87; height:2px;" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SerialNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SerialNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstallationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstallationDate)
        </dd>

        <dt class="col-sm-2">
            Ремонты
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.MaintenancesPlanModel)
            {
            <p>
                @item.ServiceType.Name от @item.ServiceDate.ToShortDateString()
            </p>    
            }
        </dd>
    </dl>
</div>
